<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <h1>seller</h1>
        {{#if hasError}}
            <div class="alert alert-danger">
                {{#each messages}}
                    <p>{{this}}</p>
                {{/each}}
            </div>
        {{/if}}
        <form action="/seller/seller" method="post">
            <div class="form-group">
                <label for="company">company</label>
                <input type="text" id="company" name="company" maxlength="20" class="form-control">
            </div>
            <div class="form-group">
                <label for="adress">adress</label>
                <input type="adress" id="adress" name="adress" class="form-control">
            </div>
            <div class="form-group">
                <label for="phone">phone</label>
                <input type="phone" id="phone" name="phone" maxlength="11" class="form-control">
            </div>
            <div class="form-group">
                <label for="rate">rate</label>
                <input type="number" id="rate" name="rate" class="form-control">
            </div>
            <button class="btn btn-primary" type="submit">add</button>
            
        </form>
    </div>
</div>